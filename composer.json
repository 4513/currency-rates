{
    "name": "mibo/currency-rates",
    "type": "library",
    "description": "PHP Library that provides currency rates and conversions",
    "keywords": [
        "PHP",
        "Currency",
        "Currencies",
        "Rates",
        "Currency Rate",
        "CNB",
        "NBS",
        "Prices",
        "Price",
        "MiBo",
        "Library",
        "Lib",
        "Package",
        "Money",
        "Bank",
        "Banks"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Michal Boris",
            "email": "michal.boris27@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "MiBo\\Currency\\Rates\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MiBo\\Currency\\Rates\\Tests\\": [
                "tests/Core/",
                "tests/"
            ]
        }
    },
    "require": {
        "php": "^8.2",
        "mibo/currencies": "^1.0",
        "ext-xmlreader": "*",
        "nesbot/carbon": "^2.72|^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "phpunit/php-invoker": "^5.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.9",
        "phpstan/phpstan-strict-rules": "^1.5",
        "jetbrains/phpstorm-attributes": "^1.0",
        "slevomat/coding-standard": "^8.15",
        "phpstan/extension-installer": "^1.3",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^1.1"
    },
    "config": {
        "platform-check": true,
        "lock": false,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
