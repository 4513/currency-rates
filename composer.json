{
    "name": "mibo/currency-rates",
    "type": "library",
    "description": "PHP Library that provides currency rates and conversions",
    "keywords": [
        "PHP",
        "Currency",
        "Currencies",
        "Rates",
        "Currency Rate",
        "CNB",
        "NBS",
        "Prices",
        "Price"
    ],
    "authors": [
        {
            "name": "Michal Boris",
            "email": "michal.boris27@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "MiBo\\Currency\\Rates\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MiBo\\Currency\\Rates\\Tests\\": [
                "tests/Core/",
                "tests/"
            ]
        }
    },
    "require": {
        "php": "^8.1",
        "mibo/currencies": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpunit/php-invoker": "^4.0",
        "phpstan/phpstan": "^1.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan-strict-rules": "^1.5",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "config": {
        "platform-check": true,
        "lock": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
